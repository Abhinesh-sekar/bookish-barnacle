% Light mode settings
\definecolor{bgcolor}{HTML}{FFFFFF} % White background for light mode
\definecolor{fgcolor}{HTML}{000000} % Black text for better readability
\definecolor{bordercolor}{HTML}{DDDDDD} % Light grey for borders

% Using complementary and analogous color schemes for box borders
\definecolor{theoremborder}{HTML}{FF4500} % OrangeRed (complementary to bg)
\definecolor{proofborder}{HTML}{32CD32} % Lime Green (analogous to fg)
\definecolor{axiomborder}{HTML}{1E90FF} % Dodger Blue (complementary to proof)
\definecolor{definitionborder}{HTML}{FFD700} % Gold (analogous to theorem)
\definecolor{exampleborder}{HTML}{8A2BE2} % Blue Violet (complementary to grey)

% Underlying light color for boxes
\definecolor{boxbasecolor}{HTML}{F5F5F5} % Very light grey for boxes

% Box background colors with 10% opacity
\colorlet{theoremcolor}{theoremborder!10!boxbasecolor}
\colorlet{proofcolor}{proofborder!10!boxbasecolor}
\colorlet{axiomcolor}{axiomborder!10!boxbasecolor}
\colorlet{definitioncolor}{definitionborder!10!boxbasecolor}
\colorlet{examplecolor}{exampleborder!10!boxbasecolor}
\definecolor{boxtextcolor}{HTML}{000000} % Black text for boxes

\pagecolor{bgcolor}
\color{fgcolor}

% Geometry settings for narrower margins
\geometry{
  a4paper, % or letterpaper
  left=1in,
  right=1in,
  top=1in,
  bottom=1in
}

% Theorem, definition, axiom, proof, and example environments
\newtcolorbox{mytheorem}[2][]{colback=theoremcolor, colframe=theoremborder, coltext=boxtextcolor, fonttitle=\bfseries, title=#2,#1}
\newtcolorbox{myproof}[1][]{colback=proofcolor, colframe=proofborder, coltext=boxtextcolor, title=Proof,#1}
\newtcolorbox{myaxiom}[2][]{colback=axiomcolor, colframe=axiomborder, coltext=boxtextcolor, fonttitle=\bfseries, title=#2,#1}
\newtcolorbox{mydefinition}[2][]{colback=definitioncolor, colframe=definitionborder, coltext=boxtextcolor, fonttitle=\bfseries, title=#2,#1}
\newtcolorbox{myexample}[2][]{colback=examplecolor, colframe=exampleborder, coltext=boxtextcolor, fonttitle=\bfseries, title=#2,#1}

